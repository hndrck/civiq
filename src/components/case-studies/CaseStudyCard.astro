---
/**
 * CaseStudyCard - Clean, content-focused card with subtle generative accent
 */

import { generateContourPattern } from '../../utils/contourGenerator';

interface Props {
  title: string;
  client: string;
  slug: string;
  summary: string;
  services?: string[];
  featured?: boolean;
  index?: number;
}

const { title, client, slug, summary, services = [], featured, index = 0 } = Astro.props;

// Get color scheme for accent
const pattern = generateContourPattern(slug, { width: 100, height: 100, levels: 1, complexity: 1 });
const { colorScheme } = pattern;
---

<article class="case-study-card">
  <a href={`/case-studies/${slug}`} class="card-link">
    <!-- Accent bar - unique color per case study -->
    <div class="accent-bar" style={`background: linear-gradient(135deg, ${colorScheme.primary}, ${colorScheme.secondary});`}></div>

    <div class="card-content">
      <div class="card-meta">
        <span class="card-client">{client}</span>
      </div>

      <h3 class="card-title">{title}</h3>

      <p class="card-summary">{summary}</p>

      {services.length > 0 && (
        <div class="card-services">
          {services.slice(0, 3).map(service => (
            <span class="service-tag">{service}</span>
          ))}
        </div>
      )}

      <span class="card-cta">
        Read case study
        <svg class="arrow" width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
          <path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </span>
    </div>
  </a>
</article>

<style>
  .case-study-card {
    position: relative;
    background: var(--color-white);
    border-radius: 12px;
    overflow: hidden;
    box-shadow:
      0 1px 3px rgba(18, 64, 69, 0.04),
      0 4px 16px rgba(18, 64, 69, 0.06);
    transition:
      transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      box-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .case-study-card:hover {
    transform: translateY(-4px);
    box-shadow:
      0 4px 12px rgba(18, 64, 69, 0.08),
      0 12px 32px rgba(18, 64, 69, 0.1);
  }

  .card-link {
    display: block;
    text-decoration: none;
  }

  .accent-bar {
    height: 4px;
    width: 100%;
  }

  .card-content {
    padding: 1.75rem 2rem 2rem;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.875rem;
  }

  .card-client {
    font-family: var(--font-primary);
    font-size: var(--text-caption);
    font-weight: var(--font-weight-semibold);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--color-teal-blue);
  }

  .card-title {
    font-family: var(--font-primary);
    font-size: var(--text-h3);
    font-weight: var(--font-weight-semibold);
    line-height: 1.25;
    letter-spacing: -0.01em;
    color: var(--color-forest-green);
    margin-bottom: 0.875rem;
    transition: color 0.25s ease;
  }

  .case-study-card:hover .card-title {
    color: var(--color-teal-blue);
  }

  .card-summary {
    font-family: var(--font-primary);
    font-size: var(--text-body);
    font-weight: var(--font-weight-regular);
    line-height: 1.6;
    color: var(--color-forest-green);
    opacity: 0.75;
    margin-bottom: 1.25rem;
  }

  .card-services {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .service-tag {
    font-family: var(--font-primary);
    font-size: var(--text-caption);
    font-weight: var(--font-weight-medium);
    color: var(--color-teal-blue);
    background: rgba(65, 129, 142, 0.08);
    padding: 0.25rem 0.75rem;
    border-radius: 2px;
  }

  .card-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-primary);
    font-size: var(--text-small);
    font-weight: var(--font-weight-medium);
    color: var(--color-warm-clay);
    transition: gap 0.25s ease;
  }

  .case-study-card:hover .card-cta {
    gap: 0.75rem;
  }

  .arrow {
    transition: transform 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .case-study-card:hover .arrow {
    transform: translateX(2px);
  }
</style>
