---
interface Props {
  nextCaseStudy?: {
    slug: string;
    title: string;
    client: string;
  };
}

const { nextCaseStudy } = Astro.props;
---

{nextCaseStudy && (
  <section class="py-12 sm:py-16" style="background-color: var(--color-white); border-top: 1px solid var(--color-grey-d);">
    <div class="content-max mx-auto px-6 sm:px-8 lg:px-12">
      <div class="text-xs font-medium mb-3 uppercase tracking-wider" style="color: var(--color-forest-green); opacity: 0.5; letter-spacing: 0.1em;">
        Next Case Study â†’
      </div>
      <a
        href={`/case-studies/${nextCaseStudy.slug}`}
        class="group block"
      >
        <h3 class="text-xl sm:text-2xl mb-2 transition-colors duration-200 headline-balance" style="color: var(--color-forest-green); font-weight: var(--font-weight-medium); letter-spacing: -0.01em; line-height: 1.3;">
          {nextCaseStudy.title}
        </h3>
        <p class="text-sm" style="color: var(--color-forest-green); opacity: 0.6;">
          {nextCaseStudy.client}
        </p>
      </a>
    </div>
  </section>
)}

<style>
  a.group:hover h3 {
    color: var(--color-teal-blue);
  }
</style>
