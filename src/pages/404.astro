---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Page Not Found â€” Civiq Design" description="The page you're looking for doesn't exist.">
  <Navigation />

  <main class="pt-16">
    <section class="error-section">
      <div class="error-content">
        <p class="error-code">404</p>
        <h1 class="error-title">Page not found</h1>
        <p class="error-message">
          The page you're looking for doesn't exist or has been moved.
        </p>
        <div class="error-actions">
          <a href="/" class="btn-primary">
            Go to Homepage
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
              <path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a href="/case-studies" class="btn-secondary">View Case Studies</a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .error-section {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 80px 5%;
    background: var(--color-rice-white);
  }

  .error-content {
    text-align: center;
    max-width: 480px;
  }

  .error-code {
    font-family: var(--font-primary);
    font-size: 8rem;
    font-weight: var(--font-weight-light);
    line-height: 1;
    color: var(--color-teal-blue);
    opacity: 0.15;
    margin-bottom: -1rem;
  }

  .error-title {
    font-family: var(--font-primary);
    font-size: var(--text-h1);
    font-weight: var(--font-weight-bold);
    color: var(--color-forest-green);
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .error-message {
    font-family: var(--font-primary);
    font-size: var(--text-intro);
    font-weight: var(--font-weight-medium);
    color: var(--color-forest-green);
    opacity: 0.7;
    line-height: 1.6;
    margin-bottom: 2.5rem;
  }

  .error-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  @media (min-width: 480px) {
    .error-actions {
      flex-direction: row;
      justify-content: center;
    }
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    background: var(--color-warm-clay);
    color: var(--color-white);
    font-weight: 500;
    font-size: 0.9375rem;
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.2s ease, transform 0.2s ease;
  }

  .btn-primary:hover {
    background: #C4624A;
    transform: translateY(-1px);
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    padding: 0.875rem 1.5rem;
    background: transparent;
    color: var(--color-teal-blue);
    font-weight: 500;
    font-size: 0.9375rem;
    border-radius: 8px;
    text-decoration: none;
    border: 1px solid var(--color-teal-blue);
    transition: background 0.2s ease, color 0.2s ease;
  }

  .btn-secondary:hover {
    background: var(--color-teal-blue);
    color: var(--color-white);
  }
</style>
